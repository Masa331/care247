<div class="row-fluid">
	<div class="span12">

		<div class="widget">
		  <div class="widget-head">
		    <div class="pull-left">Nevyřízené tickety</div> 
		    <div class="clearfix"></div>
		  </div>
	    
	    <div class="widget-content">
	      
	      <table class="table table-striped table-bordered table-hover">
	        <thead>
	          <tr>
	            <th>Předmět</th>
							<th>Číslo ticketu</th>
							<th>Odesílatel</th>
							<th>Přijato - Doba od přijetí</th>
							<th>Akce</th>
	          </tr>
	        </thead>
	        <tbody>
						<% @all_unresolved_requests.each do |r| %>
							<tr class="hover-row">
								<td><%= link_to r.subject, request_url(r.id) %></td>
								<td><%= r.id %></td>
								<td><%= r.from %></td>
								<td><%= r.created_at.to_formatted_s :czech_time_date %> | <%= time_difference r.created_at %></td>
								<td><%= link_to "Smazat", request_url(r.id), class: "btn btn-danger", method: "delete" %></td>
								
							</tr>
						<% end %>                                                                       
	        </tbody>
	      </table>
	    
	      <div class="widget-foot">
	        <div class="clearfix"></div> 
	      </div>
	    
	    </div>
		</div>

	</div>
</div>


