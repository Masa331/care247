<div class="widget">
		  <div class="widget-head">
		    <div class="pull-left">Ticket #<%= @request.id %></div>
		    <div class="widget-icons pull-right">
		    	<%= link_to "Vyřídit", "#", class: "btn" %>
					<%= link_to "Upozornit šéfa", "#", class: "btn" %>
					<%= link_to "Smazat", "#", class: "btn btn-danger" %>
		    </div>  
		    <div class="clearfix"></div>
		  </div>
	    
	    <div class="widget-content">
	      
	      <table class="table table-striped table-bordered">
	        <thead>
	          <tr>
	            <th>Předmět</th>
							<th>Odesílatel</th>
							<th>Status</th>
							<th>Smazat</th>
	          </tr>
	        </thead>
	        <tbody>
							<tr>
								<td><%= @request.subject %></td>
								<td><%= @request.from %></td>
								<td><%= @request.status_flag %></td>
								<td><%= @request.created_at.to_formatted_s :czech_time_date %> | <%= time_difference @request.created_at %></td>
							</tr>
	        </tbody>
	      </table>
	    
	      <div class="widget-foot">
	        <div class="clearfix"></div> 
	      </div>
	    
	    </div>
		</div>

<div class="row-fluid">
	<div class="span12">
		<h4>Odpověď na ticket</h4>
		<%= form_tag answer_request_path, id: @request.id do %>
			<%= text_area_tag :body, nil, class: "span12", rows: 10 %>
			<br>
			<%= submit_tag "Odeslat a vyřídit", class: "btn" %>
			<%= submit_tag "Odeslat", class: "btn" %>
		<% end %>
	</div>
</div>
<div class="row-fluid">
	<div class="span12">
		<h4 class="bottom-bordered">Historie komunikace</h4>
		<% settle_parts(@parts).each do |p| %>
			<dl class="dl-horizontal bottom-bordered">
				<dt>P5ijato</dt>
				<dd><%= p.created_at.to_formatted_s(:czech_time_date) %></dd>
				<dt>Text zpravy</dt>
				<dd><%= p.body %></dd>
			</dl>
		<% end %>
	</div>
</div>