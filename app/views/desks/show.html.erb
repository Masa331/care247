<div class="row">
	<div class="span12">
		<h2 class="inline-h"><%= @desk.name %></h2> <%= link_to "Upravit podporu", edit_desk_path(@desk) %>
		<h4 class="bottom-bordered">Nevyřízené tickety</h4>
		<table class="table table-bordered">
			<tr>
				<th>Předmět</th>
				<th>Číslo ticketu</th>
				<th>Odesílatel</th>
				<th>Přijato - Doba od přijetí</th>
				<th>Smazat</th>
			</tr>
			<% @unresolved_requests.each do |r| %>
				<tr>
					<td><%= link_to r.subject, request_url(r.id) %></td>
					<td><%= r.id %></td>
					<td><%= r.from %></td>
					<td><%= r.created_at.to_formatted_s :czech_time_date %>  <%= (Time.zone.now - r.created_at).to_formatted_s :czech_time_date %></td>
					<td><%= link_to "X", request_url(r.id), method: "delete" %></td>
				</tr>
			<% end %>
		</table>
		<h4 class="bottom-bordered">Vyřízené tickety</h4>
		<table class="table table-bordered">
			<tr>
				<th>Předmět</th>
				<th>Číslo ticketu</th>
				<th>Odesílatel</th>
				<th>Přijato - Doba od přijetí</th>
				<th>Smazat</th>
			</tr>
			<% @resolved_requests.each do |r| %>
				<tr>
					<td><%= link_to r.subject, request_url(r.id) %></td>
					<td><%= r.id %></td>
					<td><%= r.from %></td>
					<td><%= r.created_at %></td>
					<td><%= link_to "X", request_url(r.id), method: "delete" %></td>
					
				</tr>
			<% end %>
		</table>
	</div>
</div>